



<div class="ui middle aligned center aligned grid">
 <h3>Index Courses</h3>
</div>
 <a href="<%=new_course_path%>">Create New Course</a>

 <div class="ui text container">
   <table class="ui blue table">
     <thead>
       <tr>
         <th>First Name</th>
         <th>Last Name</th>
         <th>Edit</th>
         <th>Delete</th>
     </tr>
   </thead>
   <tbody>
     <% @courses.each do |course|%>
          <tr>
            <td> <%= course.name %>  </td>
            <td> <%= course.classhours %> </td>
            <td> <%=link_to 'Edit', edit_course_path(course)%> </td>
            <td> <%=link_to 'Delete', course_path(course), 'data-method': 'DELETE', remote: true, class: 'delete-course', data: { confirm: 'Are you sure?' }  %> </td>
          </tr>

         <!-- <%=link_to 'View', course_path(course)%> -->
       </div>

     <%end%>
     </tbody>
   </table>
 </div>

