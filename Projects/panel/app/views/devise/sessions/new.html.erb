<div class="ui middle aligned center aligned grid">

  <div class="column">

    <i class="massive blue lock icon"></i>
    <h2 class="ui blue image header">
      <%# <img src="assets/images/logo.png" class="image"> %>

      <%# <div class="content">
        voy a buscar una fotico que diga login
      </div> %>
    </h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => "ui large form" }) do |f| %>
      <div class="ui stacked segment">

        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :email, autofocus: true, autocomplete: "email",placeholder: "E-mail address" %>
          </div>
        </div>

        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: "off",placeholder: "password" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", :class => 'ui fluid large primary submit button' %>
        </div>
      <% end %>
      </div>

  <div class="ui message">
    <%= render "devise/shared/links" %>
  </div>

    <% flash.each do |key, value| %>
    <div class="ui red compact message">
      <p><%= value %></p>
    </div>
    <% end %>

  </div>

</div>
