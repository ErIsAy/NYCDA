<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui blue header">Sign Up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => "ui large form" }) do |f| %>
    <div class="ui stacked segment">

        <!-- <%= devise_error_messages! %> -->

        <div class="field text">
          <%= f.label :username %><br />
          <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Username" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail address" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", :class => 'ui fluid large primary submit button' %>
        </div>
      <% end %>
    </div>
      <div class="ui message">
        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
