<body>

  <div class="container card form-container">
    <div class="container">
      <h1 class="h3 mb-3 font-weight-normal text-center">Edit Case</h1>
      <a class="btn btn-sm btn-outline-secondary" href="/">Home Page</a>
    </div>
    <form class="form-group" action="/edit/<%=@post.id%>" method="POST">
      </br>
      <label for="inputName" class="sr-only">Title</label>
      <input type="text" class="form-control" name="title" placeholder="Title" value="<%=@post.title%>" required>
      </br>
      <label for="inputLastName" class="sr-only">Add Img Url</label>
      <input type="text" class="form-control" name="image_url" placeholder="Add Img Url" value="<%=@post.image%>">
      </br>
      <label for="exampleFormControlTextarea1" class="sr-only">Body</label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="10" placeholder="Body" name="body">
        <%= @post.body %>
      </textarea>
      </br>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Post</button>
      <p class="mt-5 mb-3 text-muted">&copy; EndoSpot 2018</p>
    </form>
  </div>
</body>

