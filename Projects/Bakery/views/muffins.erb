<!-- All the product pages are almost identical. Can you think of a way to have a single one instead of three??? -->

<% @muffins.each do |muffin|%>
  <div class="text-center col-md-4" style="">
    <img class="card-img-top img-thumbnail gallery-img" src=<%= muffin.image %> alt="Card image cap">
    <div class="card-body">
      <%= muffin.name %>
      <br>
      <%= muffin.price %>
    </div>
  </div>
<% end %>
