<h3>Lo' Cakes<h3>

<h3><a href="<%=new_cake_path%>">Add New Cake</a></h3>


<% @cakes.each do |cake| %>

  <div> Name:  <%=cake.name%></div>
  <div> Description: <%=cake.description%></div>
  <div> Diameter: <%=cake.diameter%></div>
  <div> Price: <%=cake.price%></div>
  <div> Available Until: <%=cake.available_until%></div>
  
      <div>   
        <a href="<%= cake_path(cake) %>" data-disable-with="Processing...">View</a>    
        <a href="<%= edit_cake_path(cake) %>">Edit</a>
        <a href="<%= cake_path(cake) %>" data-method = 'DELETE'>Delete</a>
    </div>

<%end%>